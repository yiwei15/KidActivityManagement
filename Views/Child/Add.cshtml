@model KidActivityManagement.ViewModels.AddChildViewModel;

<h1>Add a Child</h1>

    <form asp-controller="Child" asp-action="ProcessAddChild" method="POST" >
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <p>Please select your child's gender: </p>
            <input asp-for="Gender" type="radio" value="male" />
            <label>Male</label>
            <input asp-for="Gender" type="radio" value="female" />
            <label>Female</label>

            @* <select asp-for="Gender" asp-items="Model.GenderList"></select> *@
        </div>

        <div class="form-group">
            <label asp-for="DOB"></label>
            <input asp-for="DOB" type ="date"/>
            <span asp-validation-for="DOB"></span>
        </div>

        <input type="submit" value="Add Child" />

    </form>