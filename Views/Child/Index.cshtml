@{
}

@model List<KidActivityManagement.Models.Child>;

<h1>Child List</h1>

@if (Model.Count == 0)
{
    <p>No child yet.</p>
}
else
{
    foreach (var child in Model)
    {
        <Div>
            <p style="font-size:40px; text-indent: 50px; font-weight: bold">@child.Name </p>
            <p style="text-indent: 50px">Gender: @child.Gender </p>
            <p style="text-indent: 50px">Date of Birth: @child.DOB.ToShortDateString() </p>

        </Div>
    }
}

<p><a asp-controller="Child" asp-action="Add">Add a Child</a></p>

@if (Model.Count > 0)
{
    <p><a asp-controller="Child" asp-action="Delete">Delete a Child</a></p>
}

