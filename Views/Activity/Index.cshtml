@{
}

@model List<KidActivityManagement.Models.Activity>

<h1>All Activities</h1>

@if (Model.Count == 0)
{
    <p>No activities yet.</p>
}
else
{
    <table class="table">
        <tr>
            <th>Activity</th>
            <th>Start Time</th>
            <th>Location or Online Login Information</th>
            <th>Detail</th>
            <th>Delete</th>
        </tr>
        @foreach (var activity in Model)
        {
    <tr>
        <td>@activity.Name</td>
        <td>@activity.StartTime</td>
        <td>@activity.Location</td>
        <td><a asp-controller="Activity" asp-action="Detail" asp-route-id="@activity.Id">View</a></td>
        @*<td>
            <form asp-controller="Activity" asp-action="Delete">
                <input type="hidden" name="id" value="@activity.Id" />
                <input type="submit" Value="Delete" />
            </form>
        </td>
        *@
        <td><a asp-controller="Activity" asp-action="Delete" asp-route-id="@activity.Id">Delete</a></td>

    </tr>
        }

    </table>
}

<p><a asp-controller="Activity" asp-action="Add">Add an Activity</a></p>

@if (Model.Count > 0)
{
    <p><a asp-controller="Activity" asp-action="Delete">Delete a Activity</a></p>
}




