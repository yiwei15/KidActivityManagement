@model KidActivityManagement.ViewModels.AddActivityViewModel


<h1>Add an Activity</h1>

<form asp-controller="Activity" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        
        @foreach (var c in Model.Children)
        {
            <input type="checkbox" name="selectedChildren" value="@c.Id" />
            <label>@c.Name</label>
        }
    </div>

    <div class="form-group">
        <label asp-for="StartTime" ></label>
        <input asp-for="StartTime" value=DateTime.Now/>
        <span asp-validation-for="StartTime"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndTime" ></label>
        <input asp-for="EndTime" value=DateTime.Now/>
    </div>
    <div class="form-group">
        <label asp-for="IsOnline"></label>
        <select asp-for="IsOnline">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>

    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" />
    </div>

    <input type="submit" value="Add Activity" />

</form>
